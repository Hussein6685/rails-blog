<div id="<%= dom_id post %>">

  <p>
    <strong>Post ID:</strong>
    <%= post.id %>
  </p>

  <strong>image:</strong>
  <%= image_tag post.image%>
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= post.category_id %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>

</div>

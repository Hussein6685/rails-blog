<div id="<%= dom_id post %>" class="max-w-sm mx-auto my-6 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200">

  <% if post.image.present? %>
    <div class="mb-4 flex justify-center">
      <%= image_tag post.image, class: "rounded-lg max-h-48 object-cover" %>
    </div>
  <% end %>
  <div class="mb-2">
    <span class="block text-xs text-gray-500 dark:text-gray-400">Post ID: <%= post.id %></span>
  </div>
  <div class="mb-3">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white"><%= post.title %></h3>
  </div>
  <div class="mb-3">
    <p class="text-gray-700 dark:text-gray-300"><%= post.body %></p>
  </div>
  <div class="mb-2">
    <span class="text-sm text-gray-600 dark:text-gray-400">Category: <%= post.category&.name || "Uncategorized" %></span>
  </div>
  <div>
    <span class="text-sm text-gray-600 dark:text-gray-400">User: <%= post.user_id %></span>
  </div>
</div>

</div>
